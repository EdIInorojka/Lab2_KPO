<Window x:Class="Lab2_KPO.GroupForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Form" Height="250" Width="300">
    <StackPanel Margin="10">
        <Label Content="Название:"/>
        <TextBox x:Name="TitleTextBox"/>
        <Label Content="Факультет:"/>
        <ComboBox x:Name="FacultyComboBox" DisplayMemberPath="Title"/>
        <Button Content="Сохранить" Margin="0,10" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
